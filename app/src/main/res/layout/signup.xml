<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDD9D9"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/editTextPersonPassword"
        android:layout_width="343dp"
        android:layout_height="49dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edittext_backround"
        android:drawableStart="@drawable/password"
        android:drawablePadding="16dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="text"
        android:textColorHint="#4A4133"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextPersonMail" />

    <EditText
        android:id="@+id/editTextPersonConfirmPassword"
        android:layout_width="343dp"
        android:layout_height="49dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edittext_backround"
        android:drawableStart="@drawable/password"
        android:drawablePadding="16dp"
        android:ems="10"
        android:hint="Confirm password"
        android:inputType="text"
        android:textColorHint="#4A4133"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextPersonPassword" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="Create\nAccount"
        android:textColor="#70614B"
        android:textColorHint="#70614B"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.233" />

    <EditText
        android:id="@+id/editTextPersonMail"
        android:layout_width="343dp"
        android:layout_height="49dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/edittext_backround"
        android:drawableStart="@drawable/email"
        android:drawablePadding="16dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="text"
        android:textColorHint="#4A4133"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/editTextUserName"
        android:layout_width="343dp"
        android:layout_height="49dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edittext_backround"
        android:drawablePadding="16dp"
        android:ems="10"
        android:hint="Username"
        android:padding="15dp"
        android:inputType="text"
        android:textColorHint="#4A4133"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/editTextPersonMail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/shiftButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/btn_arraw1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextPersonConfirmPassword" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_goneMarginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/shiftButton">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Get Help?"
            android:textSize="16dp"
            android:textStyle="bold"
            android:background="@drawable/btn_backround"
            android:drawableStart="@drawable/search_icon"
            style="@style/Widget.AppCompat.Button"
            app:layout_constraintTop_toBottomOf="@+id/shiftButton"
            tools:layout_editor_absoluteX="18dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="210dp"
        android:text="Forgot your password? Recovery it"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/editTextPersonPassword"
        app:layout_constraintStart_toStartOf="@+id/editTextPersonPassword"
        app:layout_constraintTop_toBottomOf="@+id/editTextPersonPassword" />


</androidx.constraintlayout.widget.ConstraintLayout>